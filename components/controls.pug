mixin sliderRow(label, id, defaultValue)
  .slider-row
    .slider-label #{label}
    .slider-value(id=`slider-${id}-value`)= defaultValue
    .slider-container
      div(id=`slider-${id}`)

mixin lightControls
  .light-controls
    .control-heading Light Direction
    +sliderRow("X", "x", "0.0")
    +sliderRow("Y", "y", "-1.0")
    +sliderRow("Z", "z", "-1.0")

mixin colorPicker(label)
  .color-picker
    .picker-label= label
    .picker-control
      #colorSelectorSphere.colorSelector
        div(style="background-color: rgb(128, 204, 26)")

mixin sliderControl(label, id, defaultValue)
  .slider-row
    .control-label= label
    .control-value(id=`slider-${id}-value`)= defaultValue
    .slider-container
      div(id=`slider-${id}`)

mixin buttonControl(label, buttons)
  .button-control
    .control-label= label
    .button-group
      each button in buttons
        button.control-button(id=button.id)= button.text

mixin visualControls
  .visual-controls
    +colorPicker("Sphere Color (Material Diffuse Term)")
    +sliderControl("Light Diffuse Term", "ld", "1.0")
    +sliderControl("Wave Amount", "wave", "1.0")
    +buttonControl("Black and White", [{id: "bw-value", text: "Update"}])
    +buttonControl("Video Playback", [
      {id: "play", text: "Play"},
      {id: "pause", text: "Pause"}
    ])